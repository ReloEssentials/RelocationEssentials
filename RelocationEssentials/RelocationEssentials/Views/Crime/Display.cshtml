@{
    ViewBag.Title = "Display";
}

<div id="main">
    <img src="/images/icon_crime.gif" />
    <img src="/images/title_crimereports.gif" />
    <br />
    <span style="float:right">N/A @ViewBag.Zip</span>
    <br />
    <table align="center" border="1">
        <tr>
            <th style="text-align:center; background-color:#009; color:#FFF" colspan="5">Risk Factor</th>
        </tr>
        <tr>
            <td style="text-align:center; background-color:#FFF; color:#009">1-3 Low</td>
			<td style="text-align:center; background-color:#FFF; color:#009">4-6 Moderate</td>
			<td style="text-align:center; background-color:#FFF; color:#009">7-8 Moderately High</td>
			<td style="text-align:center; background-color:#FFF; color:#009">9 High</td>
			<td style="text-align:center; background-color:#FFF; color:#009">10 Extremely High</td>
        </tr>
    </table>
    <br />
    <div id="chart" style="width:400px; height:500px"></div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    // For horizontal bar charts, x an y values must will be "flipped"
    // from their vertical bar counterpart.
    var plot = $.jqplot('chart', [
        [[2,"Rape"], [4,"Robbery"], [6,"Motor Vehicle"], [3,"Larceny"], [2,"Homicide"], [6,"Crime Against Property"], [7, "Crime Against People"], [4, "Burglary"], [5, "Aggrevated Assault"]],
        [[1, "Rape"], [6, "Robbery"], [2, "Motor Vehicle"], [8, "Larceny"], [4, "Homicide"], [3, "Crime Against Property"], [9, "Crime Against People"], [3, "Burglary"], [1, "Aggrevated Assault"]]], {
        seriesDefaults: {
            renderer:$.jqplot.BarRenderer,
            // Show point labels to the right ('e'ast) of each bar.
            // edgeTolerance of -15 allows labels flow outside the grid
            // up to 15 pixels.  If they flow out more than that, they 
            // will be hidden.
            pointLabels: { show: false, location: 'e', edgeTolerance: -15 },
            // Rotate the bar shadow as if bar is lit from top right.
            shadowAngle: 135,
            // Here's where we tell the chart it is oriented horizontally.
            rendererOptions: {
                barDirection: 'horizontal',
                barWidth: 15,
                barMargin:25
            }
        },
        axes: {
            yaxis: {
                renderer: $.jqplot.CategoryAxisRenderer
            }
        }
    });
});
</script>

